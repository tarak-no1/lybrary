{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            4
        ],
        "no-unused-vars": "warn",
        "no-nested-ternary": "off",
        "no-restricted-globals": "off",
        "no-await-in-loop": "off",
        "no-param-reassign": "off",
        "radix": "off"
    }
}
